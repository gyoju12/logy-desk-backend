[flake8]
# Maximum line length
max-line-length = 100

# Ignore specific errors
# E203: whitespace before ':' (conflicts with black)
# W503: line break before binary operator (conflicts with black)
# E501: line too long (handled by black)
extend-ignore = E203, W503, E501

# Exclude directories and files
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .mypy_cache,
    .pytest_cache,
    build,
    dist,
    migrations,
    *migrations*,
    *node_modules*,
    *venv*,
    *.pyc,
    *.pyo,
    *.pyd,
    .Python,
    .eggs,
    *.egg,
    alembic/versions/*.py  # Exclude auto-generated migration files

# Per-file-ignores
per-file-ignores =
    # Allow import * in __init__.py
    __init__.py: F403,F401
    # Allow unused imports in test files
    tests/*.py: F401
    # Allow star imports in test files
    tests/*.py: F403

# Complexity
max-complexity = 10

# Docstrings
# docstring-convention = google  # or numpy, pep257

# Imports
import-order-style = pep8

# Other useful settings
select = 
    E,  # pycodestyle errors
    W,  # pycodestyle warnings
    F,  # pyflakes
    C,  # mccabe complexity
    B,  # bugbear
    I   # isort
    
# Show the source of each error
show-source = True

# Count total number of each type of error
count = True

# Show statistics
statistics = True
